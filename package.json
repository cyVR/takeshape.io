  "repository": {
    "type": "git",
    "url": "git://github.com/takeshape/takeshape.git"
  },
  "bugs": {
    "url": "https://github.com/takeshape/takeshape/issues"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "scripts": {
    "clean": "rm -rf build/assets",
    "postcss": "NODE_ENV=production postcss --config postcss.config.js --replace build/assets/stylesheets/styles.css",
    "postcss:dev": "postcss --config postcss.config.js --map --replace build/assets/stylesheets/styles.css",
    "scss": "node-sass --importer node_modules/node-sass-import --output-style=compressed src/stylesheets/main.scss build/assets/stylesheets/styles.css",
    "scss:dev": "node-sass --importer node_modules/node-sass-import --source-map true src/stylesheets/main.scss build/assets/stylesheets/styles.css",
    "lint:js": "eslint src/javascripts",
    "lint:css": "stylelint src/stylesheets/**/*.scss --syntax scss",
    "lint": "npm-run-all -p lint:*",
    "imagemin": "imagemin src/images/* -o build/assets/images",
    "icons": "svgo -f src/images/icons && mkdir -p build/assets/images && svg-sprite-generate -d src/images/icons -o build/assets/images/icons.svg && svgo build/assets/images/icons.svg",
    "serve": "node -e 'setTimeout(function() {}, 2000)' && browser-sync start --https --server build --port 5000 --files 'build/**/*, !build/sitemap.xml, !build/feed.xml' --reload-debounce",
    "tsg:build": "tsg",
    "build:stylesheets": "npm run scss && npm run postcss",
    "build:stylesheets:dev": "npm run scss:dev && npm run postcss:dev",
    "build:images": "npm run imagemin && npm run icons",
    "build:static": "mkdirp build/assets && cp -R src/static/* build",
    "build:javascripts": "NODE_ENV=production webpack --display-error-details -p",
    "build:javascripts:dev": "webpack --display-error-details -d",
    "build:manifest": "fester build/assets/**/* --output _data/manifest.json",
    "build": "npm-run-all --serial clean build:images build:static build:stylesheets build:javascripts tsg:build",
    "watch:css": "chokidar 'src/stylesheets/**/*' -d -c 'npm run build:stylesheets:dev'",
    "watch:js": "webpack --watch",
    "watch:images": "chokidar 'src/images/**/*' -d -c 'npm run build:images'",
    "watch:static": "chokidar 'src/static/**/*' -d -c 'npm run build:static'",
    "watch:tsg": "chokidar '**/*.html' '!build/**/*.html' -d -c 'npm run tsg:build'",
    "watch": "npm-run-all --serial clean build:images build:static build:javascripts:dev build:stylesheets:dev tsg:build && npm-run-all --continue-on-error --parallel watch:* serve",
    "start": "npm run watch"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "browser-sync": "^2.15.0",
    "chokidar-cli": "^1.2.0",
    "cssnano": "^3.7.4",
    "drive-in": "^1.5.2",
    "eslint": "^3.4.0",
    "eslint-config-xo-space": "^0.14.0",
    "eslint-plugin-babel": "^3.3.0",
    "fester": "^1.0.0",
    "html-loader": "^0.4.3",
    "imagemin-cli": "^3.0.0",
    "instafeed.js": "^1.4.1",
    "json-loader": "^0.5.4",
    "json-manifest": "^1.0.1",
    "knockout": "^3.3.0",
    "knockout-inview": "^2.5.0",
    "knockout-railway": "^0.3.2",
    "loader-utils": "^0.2.16",
    "lost": "^7.1.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.9.3",
    "node-sass-import": "^1.0.5",
    "npm-run-all": "^3.1.0",
    "object-fit-images": "^2.3.1",
    "postcss-cli": "^2.6.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-media-minmax": "^2.1.2",
    "postcss-urlrev": "^1.3.0",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.0",
    "takeshape-ssg": "^0.3.0",
    "webpack": "2.1.0-beta.25",
    "webpack-manifest-plugin": "^1.1.0",
    "youtube-player": "^3.0.4"
  },
  "dependencies": {
    "core-js": "^2.4.1",
    "raf-ready": "^1.0.1",
    "svg4everybody": "^2.1.0"
  }
}
