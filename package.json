{
  "private": true,
  "name": "takeshape-gh-pages",
  "version": "0.2.3",
  "description": "TakeShape on GitHub Pages",
  "main": "index.js",
  "scripts": {
    "clean": "rm -f {stylesheets/*,javascripts/*,images/*}",
    "autoprefixer": "postcss -u autoprefixer -r stylesheets/*",
    "scss": "node-sass --output-style compressed -o stylesheets _assets/stylesheets",
    "lint:js": "eslint _assets/javascripts",
    "lint:css": "stylelint _assets/stylesheets/**/*.scss --syntax scss",
    "test": "npm run lint:js && npm run lint:css",
    "imagemin": "imagemin _assets/images/* -o images",
    "icons": "svgo -f _assets/images/icons && mkdir -p images && svg-sprite-generate -d _assets/images/icons -o images/icons.svg",
    "serve": "browser-sync start --server _site",
    "build:jekyll": "jekyll build --config _config.yml,_config-dev.yml",
    "build:css": "npm run lint:css && npm run scss && npm run autoprefixer",
    "build:js": "npm run lint:js && rollup -c",
    "build:images": "npm run imagemin && npm run icons",
    "build:all": "npm run clean && npm run build:css && npm run build:js && npm run build:images && npm run build:jekyll",
    "watch:jekyll": "onchange 'index.html' '_includes/*.html' '_layouts/*.html' '_posts/*' -- npm run build:jekyll && browser-sync reload",
    "watch:css": "onchange '_assets/stylesheets' -- npm run build:css",
    "watch:js": "onchange '_assets/javascripts' -- npm run build:js",
    "watch:images": "onchange '_assets/images' -- npm run build:images",
    "watch:all": "npm-run-all -p serve watch:css watch:js watch:images watch:jekyll",
    "postinstall": "npm start",
    "preversion": "npm test",
    "version": "NODE_ENV=production npm run build:all && git add -A javascripts stylesheets images",
    "postversion": "git push && git push --tags",
    "start": "npm run build:all && npm run watch:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/takeshape/takeshape.git"
  },
  "keywords": [
    "cms"
  ],
  "author": "TakeShape <hello@takeshape.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/takeshape/takeshape/issues"
  },
  "homepage": "https://github.com/takeshape/takeshape#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.11.4",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015-rollup": "github:rollup/babel-preset-es2015-rollup",
    "eslint": "^3.2.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "rollup": "^0.34.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^3.3.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-npm": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.6.6"
  },
  "dependencies": {
    "svg4everybody": "^2.1.0"
  }
}
