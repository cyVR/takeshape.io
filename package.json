{
  "private": true,
  "name": "takeshape",
  "version": "0.3.2",
  "description": "Let your ideas...",
  "main": "index.js",
  "engines": {
    "node": ">= 6.0.0"
  },
  "scripts": {
    "clean": "rm -f {assets/stylesheets/*,assets/javascripts/*,assets/images/*}",
    "autoprefixer": "postcss -u autoprefixer -r assets/stylesheets/styles.css",
    "scss": "node-sass --importer node_modules/node-sass-import --output-style compressed _assets/stylesheets/main.scss assets/stylesheets/styles.css",
    "scss:dev": "node-sass --importer node_modules/node-sass-import --source-map true _assets/stylesheets/main.scss assets/stylesheets/styles.css",
    "lint:js": "eslint _assets/javascripts",
    "lint:css": "stylelint _assets/stylesheets/**/*.scss --syntax scss",
    "test": "npm run lint:js && npm run lint:css && npm run build:jekyll",
    "imagemin": "imagemin _assets/images/* -o assets/images",
    "icons": "svgo -f _assets/images/icons && mkdir -p assets/images && svg-sprite-generate -d _assets/images/icons -o assets/images/icons.svg",
    "serve": "browser-sync start --server _site --files _site --reload-debounce",
    "build:jekyll": "JEKYLL_GITHUB_TOKEN=$(cat .githubtoken) JEKYLL_ENV=production bundle exec jekyll build --config _config.yml",
    "build:css": "npm run scss && npm run postcss",
    "build:css:dev": "npm run scss:dev && npm run postcss",
    "build:js": "NODE_ENV=production rollup --config --input _assets/javascripts/main.js --output assets/javascripts/scripts.js",
    "build:js:dev": "NODE_ENV=development rollup --config --sourcemap --input _assets/javascripts/main.js --output assets/javascripts/scripts.js",
    "build:images": "npm run imagemin && npm run icons",
    "build:all": "npm run clean && npm run build:css && npm run build:js && npm run build:images",
    "build:watch": "npm run clean && npm run build:css:dev && npm run build:js:dev && npm run build:images",
    "watch:jekyll": "JEKYLL_GITHUB_TOKEN=$(cat .githubtoken) JEKYLL_ENV=development bundle exec jekyll build --config _config.yml,_config-development.yml --watch",
    "watch:css": "onchange '_assets/stylesheets' -- npm run build:css:dev",
    "watch:js": "onchange '_assets/javascripts' -- npm run build:js:dev",
    "watch:images": "onchange '_assets/images' -- npm run build:images",
    "watch": "npm-run-all -p watch:* serve",
    "postinstall": "bundle install && npm run build:all",
    "preversion": "npm test",
    "version": "NODE_ENV=production npm run build:all && git add -A assets",
    "postversion": "git push && git push --tags",
    "start": "npm run build:watch && npm run watch",
    "postcss": "postcss -u autoprefixer -u postcss-custom-media -u postcss-media-minmax -u postcss-lh -u postcss-pr -r assets/stylesheets/styles.css"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/takeshape/takeshape.git"
  },
  "keywords": [
    "cms"
  ],
  "author": "Ronik Design <info@ronikdesign.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/takeshape/takeshape/issues"
  },
  "homepage": "https://github.com/takeshape/takeshape",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.11.4",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015-rollup": "github:rollup/babel-preset-es2015-rollup",
    "babel-preset-stage-0": "^6.5.0",
    "browser-sync": "^2.14.0",
    "eslint": "^3.2.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "rollup": "^0.34.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^3.3.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-npm": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.6.6",
    "node-sass-import": "^1.0.2",
    "postcss-custom-media": "^5.0.1",
    "postcss-lh": "^1.1.3",
    "postcss-media-minmax": "^2.1.2",
    "postcss-pr": "^1.0.0"
  },
  "dependencies": {
    "svg4everybody": "^2.1.0",
    "concise.css": "github:concisecss/concise.css",
    "concise-utils": "github:concisecss/concise-utils"
  },
  "generator": "slush-gh-pages v1.2.3"
}
